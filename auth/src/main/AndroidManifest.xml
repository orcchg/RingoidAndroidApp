<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.ringoid.origin.auth">

    <application>
        <activity
            android:name=".view.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/LoginTheme.Light"
            android:windowSoftInputMode="stateAlwaysVisible">

            <intent-filter android:autoVerify="true" android:order="1">
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>

                <data android:host="ringoid.com"/>
                <data android:pathPrefix="/login"/>
                <data android:scheme="splash"/>
            </intent-filter>
        </activity>
    </application>
</manifest>
