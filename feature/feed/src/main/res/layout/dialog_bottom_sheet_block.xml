<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/refColorBg"
    android:orientation="vertical"
    android:minHeight="@dimen/dialog_bottom_sheet_block_height">

    <Button
        android:id="@+id/btn_block"
        android:layout_width="match_parent"
        android:text="@string/block_profile_button_block"
        android:textColor="@color/flat_button_text_color_primary"
        style="@style/FlatButton.Tall"/>

    <Button
        android:id="@+id/btn_report"
        android:layout_width="match_parent"
        android:text="@string/block_profile_button_report"
        android:textColor="@color/flat_button_text_color_primary"
        style="@style/FlatButton.Tall"/>
</LinearLayout>
