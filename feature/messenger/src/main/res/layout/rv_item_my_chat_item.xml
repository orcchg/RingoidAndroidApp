<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/chat_blob_divider_height"
    android:paddingBottom="@dimen/chat_blob_divider_height"
    android:paddingStart="@dimen/std_screen_10"
    android:paddingEnd="@dimen/std_margin_20">

    <TextView
        android:id="@id/tv_chat_message"
        android:layout_gravity="center_vertical|end"
        android:background="@drawable/widget_chat_blob_my"
        android:gravity="center_vertical|start"
        android:paddingTop="@dimen/std_margin_12"
        android:paddingBottom="@dimen/std_margin_12"
        android:paddingStart="@dimen/std_margin_16"
        android:paddingEnd="@dimen/std_margin_16"
        android:textColor="@android:color/black"
        style="@style/StdText.Primary"/>

    <ImageView
        android:id="@+id/iv_chat_message_read_status"
        android:layout_width="@dimen/std_icon_18"
        android:layout_height="@dimen/std_icon_18"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="4dp"
        android:contentDescription="@null"/>
</FrameLayout>
