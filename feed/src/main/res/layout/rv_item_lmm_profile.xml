<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/std_image_height"
    android:background="@android:color/transparent">

    <include layout="@layout/rv_item_feed_profile_content"/>

    <ImageButton
        android:id="@+id/ibtn_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/std_margin_16"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_chat_bubble_outline_white_36dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
