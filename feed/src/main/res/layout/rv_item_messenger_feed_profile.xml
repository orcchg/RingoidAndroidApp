<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/std_image_height"
    android:background="@android:color/transparent">

    <include layout="@layout/rv_item_feed_profile_content"/>

    <com.ringoid.widget.view.ExtendImageButton
        android:id="@+id/iv_messages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/std_margin_24"
        android:paddingBottom="@dimen/std_margin_24"
        android:paddingStart="@dimen/std_margin_24"
        android:paddingEnd="@dimen/std_margin_16"
        app:layout_constraintVertical_bias="0.28"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:xbtnSrc="@drawable/ic_messenger_fill_white_36dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
