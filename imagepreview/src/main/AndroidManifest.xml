<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.ringoid.origin.imagepreview">

    <application>
        <activity
            android:name=".view.ImagePreviewActivity"
            android:screenOrientation="portrait">

            <intent-filter android:autoVerify="true" android:order="3">
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>

                <data android:host="ringoid.com"/>
                <data android:pathPrefix="/imagepreview"/>
                <data android:scheme="appnav"/>
            </intent-filter>
        </activity>
    </application>
</manifest>
