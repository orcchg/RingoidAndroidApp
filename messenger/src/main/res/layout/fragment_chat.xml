<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/ll_text_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_edit_text_bg"
        android:minHeight="@dimen/chat_text_input_container_height"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.ringoid.widget.view.KeyEditText
            android:id="@+id/et_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:gravity="center_vertical|start"
            android:hint="@string/chat_message_edit_text_hint"
            android:imeOptions="flagNoPersonalizedLearning"
            android:inputType="textMultiLine"
            android:maxLength="1000"
            android:maxLines="4"
            android:paddingBottom="@dimen/std_margin_8"
            android:paddingStart="@dimen/std_margin_16"
            android:paddingEnd="@dimen/std_margin_16"
            android:shadowColor="@color/text_shadow"
            android:shadowRadius="6"
            android:textColor="?attr/refTextColorPrimary">
            <requestFocus/>
        </com.ringoid.widget.view.KeyEditText>

        <com.ringoid.widget.view.ExtendImageButton
            android:id="@+id/ibtn_message_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingTop="@dimen/std_margin_8"
            android:paddingBottom="@dimen/std_margin_16"
            android:paddingStart="@dimen/std_margin_8"
            android:paddingEnd="@dimen/std_margin_8"
            app:xbtnSrc="@drawable/ic_send_white_36dp"/>
    </LinearLayout>

    <View
        app:layout_constraintBottom_toTopOf="@id/ll_text_input"
        style="@style/Underscore"/>

    <ProgressBar
        android:id="@+id/pb_chat"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/ll_text_input"
        style="@style/ProgressBar.Horizontal"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_chat_messages"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingStart="@dimen/std_margin_16"
        android:paddingEnd="@dimen/std_margin_16"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ll_text_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.ringoid.widget.view.ExtendImageButton
        android:id="@+id/ibtn_chat_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:paddingTop="@dimen/std_margin_16"
        android:paddingBottom="@dimen/std_margin_12"
        android:paddingStart="@dimen/std_margin_16"
        android:paddingEnd="@dimen/std_margin_12"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:xbtnSrc="@drawable/ic_close_white_24dp"/>

    <com.ringoid.widget.view.ExtendImageButton
        android:id="@+id/ibtn_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:paddingTop="@dimen/std_margin_16"
        android:paddingBottom="@dimen/std_margin_12"
        android:paddingStart="@dimen/std_margin_12"
        android:paddingEnd="@dimen/std_margin_16"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:xbtnSrc="@drawable/ic_more_white_36dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
