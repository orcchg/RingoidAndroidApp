<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:id="@+id/space_left"
        android:layout_width="@dimen/main_bottom_bar_space_width"
        android:layout_height="@dimen/main_bottom_bar_height"
        android:background="@drawable/bottom_gradient_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:id="@+id/space_right"
        android:layout_width="@dimen/main_bottom_bar_space_width"
        android:layout_height="@dimen/main_bottom_bar_height"
        android:background="@drawable/bottom_gradient_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_gradient_black"
        android:minHeight="@dimen/main_bottom_bar_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/space_left"
        app:layout_constraintEnd_toStartOf="@id/space_right"
        app:labelVisibilityMode="unlabeled"
        app:itemIconTint="@drawable/main_bottom_bar_items_selector"
        app:menu="@menu/main_bottom_bar_items"/>

    <View
        android:id="@+id/underscore"
        android:layout_height="2dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_bar"
        style="@style/Underscore"/>
</androidx.constraintlayout.widget.ConstraintLayout>
