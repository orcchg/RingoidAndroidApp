<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_marginTop="@dimen/std_margin_20"
        android:layout_marginStart="@dimen/std_margin_20"
        android:textSize="@dimen/std_text_20"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Entry text"
        style="@style/StdText.Primary"/>

    <Button
        android:id="@+id/btn_positive"
        android:layout_marginBottom="@dimen/std_margin_8"
        android:layout_marginEnd="@dimen/std_margin_8"
        android:text="@string/button_close"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/FlatButton"/>

    <Button
        android:id="@+id/btn_negative"
        android:layout_marginBottom="@dimen/std_margin_8"
        android:layout_marginEnd="@dimen/std_margin_8"
        android:text="@string/button_close"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_positive"
        style="@style/FlatButton"/>

    <EditText
        android:id="@+id/et_dialog_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/std_margin_20"
        android:layout_marginEnd="@dimen/std_margin_20"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/tv_dialog_title"
        app:layout_constraintBottom_toTopOf="@id/btn_positive"/>
</androidx.constraintlayout.widget.ConstraintLayout>
