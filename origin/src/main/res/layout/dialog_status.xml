<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/std_dialog_height"
    android:layout_marginStart="@dimen/std_margin_32"
    android:layout_marginEnd="@dimen/std_margin_32"
    android:padding="@dimen/std_margin_20">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:gravity="center_vertical|start"
        android:textSize="@dimen/std_text_18"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="@string/error_common"
        style="@style/StdText.Primary"/>

    <WebView
        android:id="@+id/wv_status"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/std_text_16"
        app:layout_constraintTop_toBottomOf="@id/tv_dialog_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
