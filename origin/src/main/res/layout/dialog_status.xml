<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/refColorBg"
    android:orientation="vertical"
    android:padding="@dimen/std_margin_24">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:gravity="center_vertical|start"
        android:textSize="@dimen/std_text_20"
        android:textStyle="bold"
        tools:text="@string/error_common"
        style="@style/StdText.Primary"/>

    <TextView
        android:id="@+id/tv_dialog_status"
        android:layout_marginTop="@dimen/std_margin_16"
        android:gravity="center_vertical|start"
        tools:text="@string/error_common"
        style="@style/StdText.Secondary"/>
</LinearLayout>
