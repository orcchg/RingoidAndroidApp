<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.V0.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="refColorAccent">@color/accent</item>
        <item name="refColorPrimary">@color/primary</item>
        <item name="refColorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">?refColorAccent</item>
        <item name="colorPrimary">?refColorPrimary</item>
        <item name="colorPrimaryDark">?refColorPrimaryDark</item>
    </style>

    <style name="AppTheme" parent="Base.V0.AppTheme"/>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>
</resources>
