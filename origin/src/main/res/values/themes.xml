<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.V0.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="refColorAccent">@color/accent</item>
        <item name="refColorPrimary">@color/primary</item>
        <item name="refColorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">?refColorAccent</item>
        <item name="colorPrimary">?refColorPrimary</item>
        <item name="colorPrimaryDark">?refColorPrimaryDark</item>
        <item name="iconItemView">@style/IconItemView</item>
    </style>

    <style name="Base.V0.AppTheme.Light">
        <item name="refTextColorPrimary">@color/primary_text</item>
        <item name="refTextColorSecondary">@color/secondary_text</item>
    </style>

    <style name="Base.V0.AppTheme.Dark">
        <item name="refTextColorPrimary">@android:color/white</item>
        <item name="refTextColorSecondary">@color/secondary_text_light</item>
    </style>

    <style name="AppTheme" parent="Base.V0.AppTheme.Light"/>

    <!-- Screen themes -->
    <style name="LoginTheme" parent="AppTheme">
        <item name="refColorPrimary">@color/grass</item>
        <item name="refColorPrimaryDark">@color/light_grey</item>
    </style>

    <style name="ImagePreviewTheme" parent="AppTheme">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="refColorPrimaryDark">@android:color/black</item>
    </style>
</resources>
