<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        android:scaleType="centerCrop"/>

    <ProgressBar
        android:id="@+id/pb_image"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/ProgressBar.Horizontal"/>

    <com.ringoid.widget.view.ExtendImageButton
        android:id="@+id/ibtn_delete_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/std_margin_24"
        android:paddingBottom="@dimen/std_margin_24"
        android:paddingStart="@dimen/std_margin_24"
        android:paddingEnd="@dimen/std_margin_16"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:xbtnSrc="@drawable/ic_delete_white_36dp"/>

    <ImageView
        android:id="@+id/iv_likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/std_margin_16"
        android:contentDescription="@null"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ibtn_delete_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_like_white_36dp"/>

    <TextView
        android:id="@+id/tv_likes_count"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/iv_likes"
        app:layout_constraintStart_toStartOf="@id/iv_likes"
        app:layout_constraintEnd_toEndOf="@id/iv_likes"
        tools:text="0"
        style="@style/StdText.Primary"/>
</androidx.constraintlayout.widget.ConstraintLayout>
