<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Button -->
    <style name="FlatButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/flatButtonBg</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">@dimen/std_btn_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/flat_button_text_color</item>
        <item name="android:textSize">@dimen/std_text_18</item>
    </style>

    <style name="RaisedButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/raised_button_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">@dimen/std_btn_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/std_text_18</item>
    </style>

    <!-- ProgressBar -->
    <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="ProgressBar.Horizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:indeterminate">true</item>
    </style>

    <!-- TextView -->
    <style name="StdText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/std_text_16</item>
    </style>

    <style name="StdText.Accent">
        <item name="android:textColor">?refColorAccent</item>
    </style>

    <style name="StdText.Primary">
        <item name="android:textColor">?refTextColorPrimary</item>
    </style>

    <style name="StdText.Secondary">
        <item name="android:textColor">?refTextColorSecondary</item>
    </style>

    <!-- Widget -->
    <style name="IconItemView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/icon_item_view_height</item>
        <item name="icon_item_color">?refTextColorPrimary</item>
    </style>

    <style name="Underscore">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?attr/refColorUnderscore</item>
    </style>
</resources>
